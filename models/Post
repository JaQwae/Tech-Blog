            primaryKey: true,
            autoIncrement: true,
        },
        title: {

        },
        content: {

        },
        posting_date: {

        },
        comment: {
            // optional value input
        }
        // add another section for foreign key to user model (username)
    },
    {
    sequelize,
    freezeTableName: true,
    underscored: true,
    modelName: 'post',
    }
);

