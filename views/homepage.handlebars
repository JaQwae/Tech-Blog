{{#each posts as |post| }}
<div class="row align-center mb-5 home-post">
    <div class="col-md-9">
        <!-- Render user-specific data with Handlebars.js expressions -->
        <a href="/post/{{post.id}}">{{post.title}}</a>
    </div>
    <div class="col-md-3">
        <h3>{{format_date post.createdAt}}</h3>
    </div>
</div>
{{/each}}